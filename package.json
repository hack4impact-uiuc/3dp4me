{
    "name": "3DP4ME",
    "version": "1.0.0",
    "description": "Package with the development tools for 3DP4ME (such as Prettier and Husky). Please see the individual client and api sub-packages for the actual dependencies.",
    "devDependencies": {
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-flowtype": "^6.0.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.25.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "lint-staged": "^11.1.2",
        "prettier": "^2.4.1",
        "husky": "^4.3.8"
    },
    "scripts": {
        "init-repo": "chmod +x ./scripts/init-repo.sh && ./scripts/init-repo.sh",
        "check-sensitive-files": "chmod +x ./scripts/check-sensitive-files.sh && ./scripts/check-sensitive-files.sh",
        "format": "prettier --write '{client/**/*.{js,jsx,css,scss,json,md},api/**/*.{js,jsx,json,md}}'",
        "gen-db": "node scripts/generate-db-data.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hack4impact-uiuc/3dp4me.git"
    },
    "bugs": {
        "url": "https://github.com/hack4impact-uiuc/3dp4me/issues"
    },
    "homepage": "https://github.com/hack4impact-uiuc/3dp4me#readme",
    "husky": {
        "hooks": {
            "pre-commit": "yarn check-sensitive-files && lint-staged"
        }
    },
    "lint-staged": {
        "./backend/**/*.{js,jsx}": [
            "eslint --fix -c backend/.eslintrc.json"
        ],
        "./frontend/**/*.{js,jsx}": [
            "eslint --fix -c frontend/.eslintrc.json"
        ]
    },
    "dependencies": {
        "faker": "^5.5.3",
        "fs": "^0.0.1-security",
        "libphonenumber-js": "^1.9.16",
        "mongoose": "^6.0.6",
        "react-audio-player": "^0.17.0",
        "react-beautiful-dnd": "^13.1.0",
        "react-datepicker": "^4.2.1",
        "react-draggable": "^4.4.3",
        "react-flexbox-grid": "^2.1.2",
        "react-native-web": "^0.17.1",
        "react-sortable-hoc": "^2.0.0"
    }
}
