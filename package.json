{
    "name": "3DP4ME",
    "version": "1.0.0",
    "description": "Package with the development tools for 3DP4ME (such as Prettier and Husky). Please see the individual client and api sub-packages for the actual dependencies.",
    "devDependencies": {
        "eslint": "^6.5.1",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-flowtype": "^4.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.15.0",
        "eslint-plugin-react-hooks": "^2.3.0",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1"
    },
    "scripts": {
        "check-sensitive-files": "./check-sensitive-files.sh",
        "format": "prettier --write '{client/**/*.{js,jsx,css,scss,json,md},api/**/*.{js,jsx,json,md}}'",
        "gen-db": "node scripts/generate-db-data.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hack4impact-uiuc/3dp4me.git"
    },
    "bugs": {
        "url": "https://github.com/hack4impact-uiuc/3dp4me/issues"
    },
    "homepage": "https://github.com/hack4impact-uiuc/3dp4me#readme",
    "husky": {
        "hooks": {
            "pre-commit": "yarn check-sensitive-files && lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,css,scss,json,md,jsx}": [
            "prettier --write"
        ],
        "./api/**/*.{js,jsx}": [
            "eslint --fix -c api/.eslintrc.json"
        ],
        "./client/**/*.{js,jsx}": [
            "eslint --fix -c client/.eslintrc.json"
        ]
    },
    "dependencies": {
        "faker": "^5.5.3",
        "fs": "^0.0.1-security",
        "libphonenumber-js": "^1.9.16",
        "mongoose": "^5.12.7",
        "react-audio-player": "^0.14.0",
        "react-beautiful-dnd": "^13.1.0",
        "react-datepicker": "^3.8.0",
        "react-draggable": "^4.4.3",
        "react-flexbox-grid": "^2.1.2",
        "react-native-web": "^0.15.0",
        "react-sortable-hoc": "^2.0.0"
    }
}
