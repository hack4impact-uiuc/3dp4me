{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ]
    },
    "backend#build": {
      "env": [
        "DB_URI",
        "ENCRYPTION_KEY",
        "SIGNING_KEY",
        "ADMIN_ID"
      ]
    },
    "frontend#build": {
      "env": [
        "REACT_APP_COGNITO_IDENTITY_POOL_ID",
        "REACT_APP_COGNITO_REGION",
        "REACT_APP_COGNITO_USER_POOL_ID",
        "REACT_APP_COGNITO_WEB_CLIENT_ID",
        "REACT_APP_OAUTH_DOMAIN",
        "REACT_APP_CALLBACK_URL",
        "REACT_APP_BACKEND_BASE_URL"
      ]
    },
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "lint:check": {
      "dependsOn": [
        "^lint:check"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}