{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", "build/**"]
      },
      "backend#build": {
        "env": [
          "DB_URI",
          "ENCRYPTION_KEY",
          "SIGNING_KEY",
          "ADMIN_ID"
        ]
      },
      "deploy": {
        "dependsOn": ["build", "test", "lint"]
      },
      "test": {
        "dependsOn": ["build"],
        "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
      },
      "lint:check": {
        "dependsOn": [
          "^lint:check"
        ],
        "outputs": []
      },
      "lint": {
        "dependsOn": [
          "^lint"
        ],
        "outputs": []
      },
      "dev": {
        "cache": false,
        "persistent": true
      }
    }
  }